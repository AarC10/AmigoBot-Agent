{
  "name": "AmigoBot Devcontainer",
  "dockerComposeFile": ["../docker-compose.yml"],
  "service": "amigo",
  "workspaceFolder": "/root/catkin_ws",
  "shutdownAction": "stopCompose",
  "extensions": [
    "ms-python.python",
    "ms-vscode.cpptools"
  ],
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "remoteUser": "root",
  "forwardPorts": [11311],
  "containerEnv": {
    "DISPLAY": "${localEnv:DISPLAY}",
    "QT_X11_NO_MITSHM": "1",
    "LIBGL_ALWAYS_SOFTWARE": "1"
  },
  "postCreateCommand": "rosdep update || true && /bin/bash -lc 'source /opt/ros/noetic/setup.bash && if [ -d /root/catkin_ws ]; then cd /root/catkin_ws && catkin_make || true; fi'"
}

